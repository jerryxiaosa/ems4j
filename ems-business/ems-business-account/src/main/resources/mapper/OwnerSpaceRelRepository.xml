<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="info.zhihui.ems.business.account.repository.OwnerSpaceRelRepository">

    <sql id="Base_Column_List">
        id, owner_type, owner_id, space_id,
        create_user, create_user_name, create_time,
        update_user, update_user_name, update_time
    </sql>

    <select id="findListByOwnerTypesAndOwnerIds" resultType="info.zhihui.ems.business.account.entity.OwnerSpaceRelEntity">
        select <include refid="Base_Column_List"/>
        from energy_owner_space_rel
        where owner_type in
        <foreach collection="ownerTypes" item="ownerType" open="(" separator="," close=")">
            #{ownerType}
        </foreach>
          and owner_id in
        <foreach collection="ownerIds" item="ownerId" open="(" separator="," close=")">
            #{ownerId}
        </foreach>
    </select>

    <select id="findListByOwnerAndSpaceIds" resultType="info.zhihui.ems.business.account.entity.OwnerSpaceRelEntity">
        select <include refid="Base_Column_List"/>
        from energy_owner_space_rel
        where 1 = 1
        <if test="spaceIds != null and spaceIds.size() > 0">
            and space_id in
            <foreach collection="spaceIds" item="spaceId" open="(" separator="," close=")">
                #{spaceId}
            </foreach>
        </if>
        <if test="ownerType != null and ownerId != null">
            and owner_type = #{ownerType}
            and owner_id = #{ownerId}
        </if>
    </select>

    <delete id="deleteByOwnerAndSpaceIds">
        delete
        from energy_owner_space_rel
        where owner_type = #{ownerType}
          and owner_id = #{ownerId}
          and space_id in
        <foreach collection="spaceIds" item="spaceId" open="(" separator="," close=")">
            #{spaceId}
        </foreach>
    </delete>

</mapper>
