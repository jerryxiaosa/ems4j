<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="info.zhihui.ems.foundation.user.repository.UserRoleRepository">

    <select id="selectByUserId" resultType="info.zhihui.ems.foundation.user.entity.UserRoleEntity">
        select *
        from sys_user_role
        where user_id = #{userId}
    </select>

    <select id="selectByUserIds" resultType="info.zhihui.ems.foundation.user.entity.UserRoleEntity">
        select *
        from sys_user_role
        where user_id in
        <foreach item="item" index="index" collection="userIds" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <delete id="deleteByUserId">
        delete from sys_user_role
        where user_id = #{userId}
    </delete>

    <select id="countByRoleId" resultType="int">
        select count(1)
        from sys_user_role
        where role_id = #{roleId}
    </select>

</mapper>
